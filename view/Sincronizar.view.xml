<mvc:View
    controllerName="com.pontual.sgmr.controller.Sincronizar"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="pageInicio"
        title="{i18n>title}"
        titleAlignment="Center"
        showNavButton="true"
        navButtonPress="onNavBack"
        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    >
        <headerContent>
            <ObjectStatus
                id="networkStatus"
                active="false"
                inverted="true"
                icon="{path: 'conexaoModel>statusConexao',
                    formatter: 'com.pontual.sgmr.model.formatter.getIconeConexao'}"
                state="{path: 'conexaoModel>statusConexao',
                        formatter: 'com.pontual.sgmr.model.formatter.getCorIconeConexao'}"
            />
        </headerContent>
        <content>
            <VBox
                id="sincronismoFormContainer"
                fitContainer="true"
                justifyContent="Center"
                alignItems="Center"
                alignContent="Center"
            >
                <items>
                    <Button
                        id="downloadAutorizacaoButton"
                        width="12rem"
                        text="{i18n>autorizacoes} ({= ${listaAutorizacaoModel>/}.length})"
                        type="Emphasized"
                        press="onDownloadAutorizacao"
                        icon="sap-icon://download-from-cloud"
                        class="sapUiSmallMarginBottom"
                    />
                    <Button
                        id="downloadCentrosButton"
                        width="12rem"
                        text="{i18n>centros} ({= ${listaCentrosModel>/}.length})"
                        type="Emphasized"
                        press="onDownloadCentros"
                        icon="sap-icon://download-from-cloud"
                        class="sapUiSmallMarginBottom"
                    />
                    <Button
                        id="downloadEquipamentoButton"
                        width="12rem"
                        text="{i18n>equipamentos} ({= ${listaEquipamentoModel>/}.length})"
                        type="Emphasized"
                        press="onDownloadEquipamento"
                        icon="sap-icon://download-from-cloud"
                        class="sapUiSmallMarginBottom"
                    />
                    <Button
                        id="downloadPerfilButton"
                        width="12rem"
                        text="{i18n>perfis}  ({= ${listaPerfilModel>/}.length})"
                        type="Emphasized"
                        press="onDownloadPerfil"
                        icon="sap-icon://download-from-cloud"
                        class="sapUiSmallMarginBottom"
                    />
                    <Button
                        id="downloadUsuarioButton"
                        width="12rem"
                        text="{i18n>usuarios}  ({= ${listaUsuariosModel>/}.length})"
                        type="Emphasized"
                        press="onDownloadUsuario"
                        icon="sap-icon://download-from-cloud"
                        class="sapUiSmallMarginBottom"
                    />
                    <Button
                        id="uploadMedicaoButton"
                        width="12rem"
                        text="{i18n>medicoes}  ({= ${listaMedicoesModel>/}.length})"
                        type="Emphasized"
                        press="onUploadMedicao"
                        icon="sap-icon://upload-to-cloud"
                        class="sapUiSmallMarginBottom"
                        visible="true"
                    />
                    <Button
                        id="sincronizarButton"
                        width="12rem"
                        text="{i18n>sincronizargeral}"
                        type="Emphasized"
                        press="onSincronizar"
                        icon="sap-icon://synchronize"
                        class="sapUiSmallMarginBottom"
                        visible="true"
                    />
                </items>
            </VBox>
        </content>
        <footer>
            <OverflowToolbar>
                <Button
                    id="messagePopoverBtn"
                    visible="{=!!${message>/}.length}"
                    icon="{ path: '/', formatter: '.buttonIconFormatter' }"
                    type="{ path: '/', formatter: '.buttonTypeFormatter' }"
                    text="{path: '/', formatter: '.highestSeverityMessages' }"
                    press=".handleMessagePopoverPress"
                    ariaHasPopup="Dialog"
                />
                <ToolbarSpacer />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
