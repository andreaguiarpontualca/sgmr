<mvc:View
	controllerName="com.pontual.sgmr.controller.Formulario"    
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	xmlns:core="sap.ui.core"    
    displayBlock="true"
>
    <VBox
        id="idVBoxInspecao"
        class="sapUiSmallMargin"
    >
			<Table id="idInspecoesTable" 
				alternateRowColors="true"
				autoPopinMode="false" 
				contextualWidth="Auto"		
				growing="true" 
				growingThreshold="100" 
				mode="None"
                paste="onPaste"                
				noDataText="{i18n>dadosnaoencontrados}"
				items="{
					path: 'materialRodanteFormularioModel>/Inspecoes',					
					sorter: [{
							path: 'Inspecao', 
							descending: false
						}]
				}"	>        
            <columns>
                <Column hAlign="Begin" minScreenWidth="Phone" demandPopin="true" width="85%">
                    <Text text="Atividade" />
                </Column>                    
                <Column hAlign="Begin" minScreenWidth="Tablet" demandPopin="true" width="15%">
                    <Text text="Inspecionado" />
                </Column>                           
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectStatus text="{materialRodanteFormularioModel>Inspecao}" />                        
                        <Switch state="{materialRodanteFormularioModel>Selecionada}" customTextOn="{i18n>sim}" customTextOff="{i18n>nao}" >
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </Switch>	                        
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <Text text="Observações" />        
        <TextArea value="{materialRodanteFormularioModel>Observacoes}" rows="8" width="100%"/>
    </VBox>
</mvc:View>
