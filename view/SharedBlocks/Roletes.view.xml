<mvc:View
	controllerName="com.pontual.sgmr.controller.Formulario"  
    height="100%"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"   
    displayBlock="true"
    xmlns="sap.m">

		    <VBox class="sapUiSmallMargin">     
				<f:Form id="criarUsuarioForm"
				editable="true">
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="4"
						labelSpanM="12"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="2"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer title="Roletes com Vazamentos?">
						<f:formElements>
							<f:FormElement >
								<f:fields>							
									<Switch state="{materialRodanteFormularioModel>RoleteVazamento}" customTextOn="{i18n>sim}" customTextOff="{i18n>nao}" >
										<layoutData>
											<FlexItemData growFactor="1" />
										</layoutData>
									</Switch>				
								</f:fields>
							</f:FormElement>    							
							<f:FormElement label="Qtde Lado Direito">
								<f:fields>							
									<Input 
										value="{materialRodanteFormularioModel>RoleteQtdeLD}"																						
										type="Number"
										enabled="true"
										required="false"
										showClearIcon="true"
										textDirection="RTL"								
										/> 						
								</f:fields>
							</f:FormElement>
							<f:FormElement label=" Qtde Lado Esquerdo">
								<f:fields>							
									<Input 
										value="{materialRodanteFormularioModel>RoleteQtdeLE}"												
										type="Number"
										enabled="true"
										required="false"
										showClearIcon="true"
										textDirection="RTL"								
										/> 															
								</f:fields>
							</f:FormElement>                                                                                      
						</f:formElements>
					</f:FormContainer>																
				</f:formContainers>				
			</f:Form>     
		</VBox>
</mvc:View>
