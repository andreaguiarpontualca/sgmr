<mvc:View
	controllerName="com.pontual.sgmr.controller.Formulario"    
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	xmlns:core="sap.ui.core"    
    displayBlock="true"
>
    <VBox
        id="idComponente"
        class="sapUiSmallMargin"
    >
			<Table id="idRetornosTable" 
				alternateRowColors="true"
				autoPopinMode="false" 
				contextualWidth="Auto"		
				growing="true" 
				growingThreshold="100" 
				mode="None"
                paste="onPaste"                
				items="{
					path: 'materialRodanteFormularioModel>/Retorno',					
					sorter: [{
							path: 'Componente', 
							descending: false
						}, {
							path: 'Lado', 
							descending: false
						}]
				}"	>        
            <headerToolbar>
                <OverflowToolbar id="otbSubheader2">
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column hAlign="Begin" minScreenWidth="Phone" demandPopin="true" width="30%">
                    <Text text="{i18n>Mensagem}" />
                </Column>          
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectStatus
                            title="{materialRodanteFormularioModel>Type}"
                            text="{materialRodanteFormularioModel>Message}"                              />		                            	                          
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</mvc:View>
